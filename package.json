{
  "name": "pilgrim-challenge-financial-report",
  "version": "1.0.0",
  "description": "NodeJS service for generating financial reports related to the consumption of Pilgrim products",
  "author": "Marcus Vinicius",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcusviniciusfa/pilgrim-challenge-financial-report.git"
  },
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev -r dotenv/config --respawn --transpile-only ./src/index.ts",
    "start": "rm -rf ./dist && tsc && node -r dotenv/config ./dist/index.js",
    "lint": "npm run compile && npx eslint --fix . && npx prettier --write .",
    "test": "npx jest --passWithNoTests",
    "test:watch": "npx jest --passWithNoTests --watchAll",
    "compile": "tsc --outDir ./tmp && rm -rf ./tmp",
    "commit": "commit"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "@commitlint/prompt-cli": "^13.2.0",
    "@types/jest": "27.0.2",
    "@types/node": "^16.10.3",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-boundaries": "^2.4.2",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.0",
    "jest": "27.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "2.4.1",
    "pretty-quick": "^3.1.1",
    "ts-jest": "27.0.5",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "dotenv": "^10.0.0"
  }
}
