{
  "name": "pilgrim-challenge-financial-report",
  "version": "1.0.0",
  "description": "NodeJS service for generating financial reports related to the consumption of Pilgrim products",
  "author": "Marcus Vinicius",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcusviniciusfa/pilgrim-challenge-financial-report.git"
  },
  "license": "ISC",
  "main": "server.js",
  "scripts": {
    "dev": "ts-node-dev -r dotenv/config -r tsconfig-paths/register --respawn --watch ./src --transpile-only ./src/server.ts",
    "start": "rm -rf ./dist && tsc -p tsconfig.build.json && node -r dotenv/config -r tsconfig-paths/register ./dist/server.js",
    "lint": "npx eslint --fix . && npx prettier --write .",
    "test": "npx jest --passWithNoTests",
    "test:watch": "npx jest --passWithNoTests --watchAll",
    "build": "tsc -p tsconfig.build.json --outDir ./tmp && rm -rf ./tmp",
    "commit": "commit"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "@commitlint/prompt-cli": "^13.2.0",
    "@shelf/jest-mongodb": "^2.1.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.2",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^16.10.3",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-boundaries": "^2.4.2",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.0",
    "jest": "27.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "2.4.1",
    "pretty-quick": "^3.1.1",
    "supertest": "^6.1.6",
    "ts-jest": "27.0.5",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3",
    "uuid": "^8.3.2"
  },
  "dependencies": {
    "@types/pdfkit": "^0.11.2",
    "@types/pdfmake": "^0.1.19",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "moment": "^2.29.1",
    "mongoose": "^6.0.10",
    "pdfkit": "^0.12.3",
    "pdfmake": "^0.2.2",
    "tsconfig-paths": "^3.11.0"
  }
}
